{
  "name": "prompt-cli",
  "version": "1.0.0",
  "description": "A CLI tool for managing, versioning, and evaluating LLM prompts",
  "homepage": "https://github.com/ronitbatra/prompt-cli#readme",
  "bugs": {
    "url": "https://github.com/ronitbatra/prompt-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronitbatra/prompt-cli.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "node -e \"const fs=require('fs'); try { if(!fs.existsSync('dist')) { const ts=require.resolve('typescript'); if(ts) require('child_process').execSync('npx tsc', {stdio:'inherit'}); } } catch(e) { /* dist/ already built or TypeScript not available - that's ok */ }\"",
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "js-yaml": "^4.1.0"
  },
  "bin": {
    "prompt-cli": "./bin/run.js"
  },
  "oclif": {
    "bin": "prompt-cli",
    "commands": "./dist/commands",
    "dirname": "prompt-cli",
    "topicSeparator": " "
  },
    "devDependencies": {
      "@types/node": "^18.19.130",
      "@types/js-yaml": "^4.0.9",
      "@typescript-eslint/eslint-plugin": "^7.0.0",
      "@typescript-eslint/parser": "^7.0.0",
      "eslint": "^8.57.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.1.3",
      "prettier": "^3.2.5",
      "ts-node": "^10.9.2",
      "typescript": "^5.9.3",
      "vitest": "^2.1.0",
      "@vitest/ui": "^2.1.0",
      "@vitest/coverage-v8": "^2.1.0"
    }
}
